<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- Welcome Section -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@color/primary">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="20dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/ic_elderly_care"
                    android:layout_marginEnd="16dp"
                    app:tint="@android:color/white" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_greeting"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/good_morning"
                        android:textColor="@android:color/white"
                        android:textSize="18sp"
                        android:fontFamily="@font/roboto_medium" />

                    <TextView
                        android:id="@+id/tv_user_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="John Doe"
                        android:textColor="@android:color/white"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:fontFamily="@font/roboto_bold"
                        tools:text="John Doe" />

                </LinearLayout>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Health Summary Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/health_summary"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="@color/on_background"
            android:layout_marginBottom="16dp"
            android:fontFamily="@font/roboto_bold" />

        <!-- Health Data Grid -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="20dp">

            <!-- Row 1: Blood Pressure & Heart Rate -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp">

                <!-- Blood Pressure Card -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/card_blood_pressure"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="3dp"
                    app:cardBackgroundColor="@color/surface"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackground">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:src="@drawable/ic_blood_pressure"
                            android:layout_marginBottom="8dp"
                            app:tint="@color/health_blue" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/blood_pressure"
                            android:textSize="16sp"
                            android:textColor="@color/on_surface"
                            android:fontFamily="@font/roboto_medium"
                            android:gravity="center"
                            android:layout_marginBottom="4dp" />

                        <TextView
                            android:id="@+id/tv_blood_pressure_value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="--/--"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:textColor="@color/health_blue"
                            android:fontFamily="@font/roboto_bold"
                            tools:text="120/80" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/unit_mmhg"
                            android:textSize="12sp"
                            android:textColor="@color/on_surface_variant" />

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <!-- Heart Rate Card -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/card_heart_rate"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="3dp"
                    app:cardBackgroundColor="@color/surface"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackground">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:src="@drawable/ic_heart_rate"
                            android:layout_marginBottom="8dp"
                            app:tint="@color/health_green" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/heart_rate"
                            android:textSize="16sp"
                            android:textColor="@color/on_surface"
                            android:fontFamily="@font/roboto_medium"
                            android:gravity="center"
                            android:layout_marginBottom="4dp" />

                        <TextView
                            android:id="@+id/tv_heart_rate_value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="--"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:textColor="@color/health_green"
                            android:fontFamily="@font/roboto_bold"
                            tools:text="72" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/unit_bpm"
                            android:textSize="12sp"
                            android:textColor="@color/on_surface_variant" />

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>

            <!-- Row 2: Blood Sugar & Daily Steps -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <!-- Blood Sugar Card -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/card_blood_sugar"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="3dp"
                    app:cardBackgroundColor="@color/surface"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackground">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:src="@drawable/ic_blood_sugar"
                            android:layout_marginBottom="8dp"
                            app:tint="@color/health_orange" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/blood_sugar"
                            android:textSize="16sp"
                            android:textColor="@color/on_surface"
                            android:fontFamily="@font/roboto_medium"
                            android:gravity="center"
                            android:layout_marginBottom="4dp" />

                        <TextView
                            android:id="@+id/tv_blood_sugar_value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="--"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:textColor="@color/health_orange"
                            android:fontFamily="@font/roboto_bold"
                            tools:text="95" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/unit_mg_dl"
                            android:textSize="12sp"
                            android:textColor="@color/on_surface_variant" />

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <!-- Daily Steps Card -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/card_daily_steps"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="3dp"
                    app:cardBackgroundColor="@color/surface"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackground">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:src="@drawable/ic_steps"
                            android:layout_marginBottom="8dp"
                            app:tint="@color/health_purple" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/daily_steps"
                            android:textSize="16sp"
                            android:textColor="@color/on_surface"
                            android:fontFamily="@font/roboto_medium"
                            android:gravity="center"
                            android:layout_marginBottom="4dp" />

                        <TextView
                            android:id="@+id/tv_daily_steps_value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="--"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:textColor="@color/health_purple"
                            android:fontFamily="@font/roboto_bold"
                            tools:text="5,240" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/unit_steps"
                            android:textSize="12sp"
                            android:textColor="@color/on_surface_variant" />

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>

        </LinearLayout>

        <!-- Quick Actions -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Aksi Cepat"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="@color/on_background"
            android:layout_marginBottom="16dp"
            android:fontFamily="@font/roboto_bold" />

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="20dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_add_health_record"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:text="@string/add_record"
                android:textSize="16sp"
                app:icon="@drawable/ic_add"
                app:iconGravity="textStart"
                style="@style/Widget.Material3.Button.OutlinedButton" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_view_medications"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:text="Lihat Obat"
                android:textSize="16sp"
                app:icon="@drawable/ic_medication"
                app:iconGravity="textStart"
                style="@style/Widget.Material3.Button.OutlinedButton" />

        </LinearLayout>

        <!-- Today's Medications -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="3dp"
            app:cardBackgroundColor="@color/surface">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="12dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Obat Hari Ini"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/on_surface"
                        android:fontFamily="@font/roboto_bold" />

                    <TextView
                        android:id="@+id/tv_view_all_medications"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/view_all"
                        android:textColor="@color/primary"
                        android:textSize="14sp"
                        android:clickable="true"
                        android:focusable="true"
                        android:background="?attr/selectableItemBackground"
                        android:padding="4dp"
                        android:fontFamily="@font/roboto_medium" />

                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_today_medications"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:nestedScrollingEnabled="false"
                    tools:listitem="@layout/item_medication_today" />

                <TextView
                    android:id="@+id/tv_no_medications"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tidak ada obat untuk hari ini"
                    android:textSize="14sp"
                    android:textColor="@color/on_surface_variant"
                    android:layout_gravity="center"
                    android:padding="16dp"
                    android:visibility="gone"
                    tools:visibility="visible" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- FAB for Emergency -->
        <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
            android:id="@+id/fab_emergency"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Darurat"
            android:textSize="16sp"
            android:textStyle="bold"
            app:icon="@drawable/ic_emergency"
            app:backgroundTint="@color/emergency_red"
            app:iconTint="@android:color/white"
            android:textColor="@android:color/white"
            android:layout_marginBottom="16dp" />

    </LinearLayout>

</ScrollView>