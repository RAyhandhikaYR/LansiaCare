<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_note"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    app:cardBackgroundColor="@color/surface"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- Header Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_notes"
                android:layout_marginEnd="12dp"
                android:layout_gravity="top"
                app:tint="@color/primary" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_note_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Konsultasi dengan Dr. Budi"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/on_surface"
                    android:fontFamily="@font/roboto_bold"
                    tools:text="Konsultasi dengan Dr. Budi" />

                <TextView
                    android:id="@+id/tv_note_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="15/08/2023"
                    android:textSize="14sp"
                    android:textColor="@color/on_surface_variant"
                    android:fontFamily="@font/roboto_regular"
                    tools:text="15/08/2023" />

            </LinearLayout>

        </LinearLayout>

        <!-- Doctor & Hospital Info -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="4dp">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_doctor"
                    android:layout_marginEnd="8dp"
                    android:layout_gravity="center_vertical"
                    app:tint="@color/secondary" />

                <TextView
                    android:id="@+id/tv_note_doctor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Dr. Budi Santoso, Sp.PD"
                    android:textSize="14sp"
                    android:textColor="@color/on_surface"
                    android:fontFamily="@font/roboto_medium"
                    tools:text="Dr. Budi Santoso, Sp.PD" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_hospital"
                    android:layout_marginEnd="8dp"
                    android:layout_gravity="center_vertical"
                    app:tint="@color/secondary" />

                <TextView
                    android:id="@+id/tv_note_hospital"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="RS Siloam Kebon Jeruk"
                    android:textSize="14sp"
                    android:textColor="@color/on_surface"
                    android:fontFamily="@font/roboto_medium"
                    tools:text="RS Siloam Kebon Jeruk" />

            </LinearLayout>

        </LinearLayout>

        <!-- Note Preview -->
        <TextView
            android:id="@+id/tv_note_preview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hasil pemeriksaan menunjukkan tekanan darah dalam batas normal. Pasien disarankan untuk..."
            android:textSize="14sp"
            android:textColor="@color/on_surface_variant"
            android:fontFamily="@font/roboto_regular"
            android:layout_marginBottom="16dp"
            android:maxLines="3"
            android:ellipsize="end"
            tools:text="Hasil pemeriksaan menunjukkan tekanan darah dalam batas normal. Pasien disarankan untuk..." />

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_edit"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="Edit"
                android:textSize="12sp"
                android:layout_marginEnd="8dp"
                app:icon="@drawable/ic_edit"
                app:iconSize="16dp"
                style="@style/Widget.Material3.Button.OutlinedButton" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_delete"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="Hapus"
                android:textSize="12sp"
                app:icon="@drawable/ic_delete"
                app:iconSize="16dp"
                app:iconTint="@color/error"
                android:textColor="@color/error"
                style="@style/Widget.Material3.Button.TextButton" />

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>