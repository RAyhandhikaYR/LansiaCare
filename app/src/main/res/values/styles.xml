<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base Theme -->
    <style name="Theme.lansiacare" parent="Theme.Material3.DayNight">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_variant</item>
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondary_variant</item>
        <item name="colorSurface">@color/surface</item>
        <item name="colorBackground">@color/background</item>
        <item name="colorOnPrimary">@android:color/white</item>
        <item name="colorOnSecondary">@android:color/white</item>
        <item name="colorOnSurface">@color/on_surface</item>
        <item name="colorOnBackground">@color/on_background</item>

        <!-- Accessibility Settings untuk Lansia -->
        <item name="android:textSize">18sp</item>
        <item name="android:letterSpacing">0.05</item>
        <item name="android:lineSpacingMultiplier">1.2</item>
    </style>

    <!-- Text Appearance LansiaCare -->
    <style name="TextAppearance.lansiacare" parent="TextAppearance.Material3.BodyLarge">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!-- Large Text Style untuk Lansia -->
    <style name="TextAppearance.lansiacare.Large">
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:letterSpacing">0.05</item>
        <item name="fontFamily">@font/roboto_bold</item>
    </style>

    <!-- Medium Text Style -->
    <style name="TextAppearance.lansiacare.Medium">
        <item name="android:textSize">20sp</item>
        <item name="android:letterSpacing">0.05</item>
        <item name="fontFamily">@font/roboto_medium</item>
    </style>

    <!-- Regular Text Style -->
    <style name="TextAppearance.lansiacare.Regular">
        <item name="android:textSize">18sp</item>
        <item name="android:letterSpacing">0.05</item>
        <item name="fontFamily">@font/roboto_regular</item>
    </style>

    <!-- Button Style untuk Lansia -->
    <style name="Widget.lansiacare.Button" parent="Widget.Material3.Button">
        <item name="android:minHeight">56dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:letterSpacing">0.05</item>
        <item name="cornerRadius">12dp</item>
    </style>

    <!-- Emergency Button Style -->
    <style name="Widget.lansiacare.Button.Emergency" parent="Widget.Material3.Button">
        <item name="backgroundTint">@color/emergency_red</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
    </style>

    <!-- Card Style dengan elevasi tinggi untuk visibilitas -->
    <style name="Widget.lansiacare.Card" parent="Widget.MaterialComponents.CardView">
        <item name="cardElevation">6dp</item>
        <item name="cardCornerRadius">16dp</item>
        <item name="android:layout_margin">8dp</item>
    </style>

    <style name="Widget.LansiaCare.Button.Emergency" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">@color/red</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:padding">16dp</item>
    </style>

</resources>